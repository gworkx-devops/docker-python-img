pipeline {
    agent any

    stages {
        stage('SetUp') {
            agent {
                docker {
                    image 'python:3-alpine'
                    /* args  '-v /var/run/docker.sock:/var/run/docker.sock' */
                }
            }
            steps {
                echo 'SetUp The Build Env'
            }
        }
        stage('Build') {
            steps {
                echo 'Build The Image'
            }
        }
        stage('Publish') {
            steps {
                echo 'Publish The Image To The Registry'
            }
        }
    }
}
