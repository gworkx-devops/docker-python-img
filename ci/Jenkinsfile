pipeline {
    agent {
        docker {
            image 'docker:latest'
            args  '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages {
        stage('SetUp') {
            steps {
                echo 'SetUp The Build Env'
                sh"""
                    printenv
                """

            }
        }
        stage('Build') {
            steps {
                echo 'Build The Image'
                sh"""
                    docker version
                """
            }
        }
        stage('Publish') {
            steps {
                echo 'Publish The Image To The Registry'
                sh"""
                    docker info
                """
            }
        }
    }
}
